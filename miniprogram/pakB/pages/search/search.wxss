/* pakA/pages/search/search.wxss */
.contert {
    background-color: white;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
}

.inp {
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    background-color: #f7f7f7;
    margin-left: 16rpx;
    vertical-align: top;
    padding-left: 40rpx;
    font-size: 24rpx;
}

.searchText{
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #000000;
    text-align: center;
}


.history{
    width: 100%;
    height: auto;
    background-color: white;
}

.history .header{
    width: 96%;
    display: flex;
    margin: auto;
    justify-content: space-between;
}
.history .header .left{
    color: #000;
    font-weight: bolder;
}

.history .header .right{
    
}

.history .header .right image{
    width: 40rpx;
    height: 40rpx;
}

.history .bot{
    width: 96%;
    display: flex;
    flex-wrap: wrap;
    margin: 10rpx auto;
}

.history .bot .search-name{
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    margin: 10rpx;
    padding-left:20rpx;
    padding-right:20rpx;
    border-radius: 40rpx;
    font-size:24rpx;
    text-align: center;
    background-color: #f8f8f8;
}

.goods{
    width: 98%;
    margin: auto;
    margin-top: 10rpx;
}

.goods .good{
    display: flex;
    background-color: white;
    width: 100%;
    height: 200rpx;
    border-radius: 8rpx;
    margin: 16rpx auto;
}



.goods .good .left image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx;
    margin-left: 10rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.goods .good .right{
    width: 100%;
}


.goods .good .right .name{
    width:540rpx;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods .good .right .content{
    margin-top: 10rpx;
    width:520rpx;
    height: 80rpx;
    font-size: 28rpx;
    margin-top: 40rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods .good .right .price{
    color: #c85945;
    font-size: 36rpx;
}

.return{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: white;
    text-align: right;
}

.return image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.empty-good {
    margin: auto;
    margin-top: 300rpx;
    color:#ccc;
}

.bot-toast {
    font-size: 24rpx;
    text-align: center;
    margin-top: 20rpx;
    margin-bottom: 140rpx;
    color: #ccc;
}

