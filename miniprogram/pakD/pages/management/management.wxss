/* pakA/pages/management/management.wxss */
page {
    background-color: #f9f9f9;
}
.box{
    margin-bottom: 20rpx;
}
.ccc {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    margin-bottom: 15rpx;
    background-color: white;
}

.cca {
    width: 200rpx;
    height: 120rpx;
    line-height: 120rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    text-align: center;
    color: #ccc;
}

.ccb {
    width: 200rpx;
    height: 120rpx;
    line-height: 120rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    text-align: center;
    color: #000 !important;
    border-bottom: 4rpx solid #000;
}

.aaa {
    width:auto;
    height:auto;
    margin-top: 11rpx;
    margin-left: 2%;
    margin-right: 2%;
    margin-bottom: 20rpx;
    padding: 10rpx;
    padding-left: 20rpx;
    font-size: 35rpx;
    background-color: white;
    border-radius:10rpx;
}

.aaa .title{
    color: #000;
    font-size: 36rpx;
    font-weight:bolder;
    margin-top: 10rpx;
}
.aaa .top{
    display: flex;
    margin-top: 10rpx;
}
.aaa .top image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
}
.consto {
    width: 500rpx;
    height: 200rpx;
    line-height: 40rpx;
    margin-left: 20rpx;
    overflow: hidden;
    font-size: 28rpx;
    text-align: center;
    text-indent: 1em;
    padding-top: 20rpx;
}

.bot {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 10rpx;
    padding-top: 10rpx;
    display: flex;
    justify-content: center;
    border-top: 1rpx solid rgb(236, 235, 235);
}

.abc {
    width: 300rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #497749;
    border-radius: 8rpx;
    margin: auto 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: white;
}
.abc:last-child{
    background-color: #c85945;
}

