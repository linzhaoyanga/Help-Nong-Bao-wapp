.containr {
    width: 100%;
    height: 80rpx;
    position: fixed;
    display: flex;
    justify-content: space-evenly;
    background-color: white;
    font-size: 28rpx;
    z-index: 99999;
}

.containername {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #000;
    opacity: 0.8;
}

.active {
    opacity: 1;
    border-bottom: 4rpx solid #000;
}

.kkkk {
    margin-top: 90rpx;
}

.list {
    width: auto;
    height: auto;
    background-color: white;
    margin: auto 10rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    padding: 20rpx;
    border-radius: 4rpx;
}

.list .top {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.list .top .left {
    display: flex;
}

.list .top .left image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.list .top .left view {
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
}

.list .top .right view {
    font-size: 28rpx;
    margin-top: 8rpx;
    color: rgb(240, 3, 3);
}

.list .middle {
    display: flex;
    margin-top: 10rpx;
    border-bottom: 1rpx solid rgb(243, 243, 243);
}

.list .middle .left image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
}

.list .middle .right {
    width: 300rpx;
    margin-left: 20rpx;
}

.list .middle .right .title {
    width: 490rpx;
    margin-bottom: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .middle .right .num {
    margin-top: 45rpx;
    color: #c85945;
}

.list .middle .btnk {
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 60rpx;

    background-color: #53b175;
    color: white;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
}

.list .bot {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
}

.list .bot .time {
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #ccc;
}

.list .bot .go {
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
    text-align: center;
    float: right;
    font-size: 28rpx;
    border-radius: 10rpx;
    color: white;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background-color: #c85945;
}

.list .total {
    margin-top: 10rpx;
}

.list .total .header {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #000;
    border-left: 10rpx solid #53b175;
    padding-left: 10rpx;
}

.list .total>.t {
    font-size: 28rpx;
    margin: 10rpx auto;
    margin-left: 15rpx;
}

.list .total>.t .total-num {
    height: 50rpx;
    line-height: 50rpx;
}

.list .total>.t .total-price {
    height: 50rpx;
    line-height: 50rpx;
}

.list .total>.b {
    font-size: 28rpx;
    margin: 10rpx auto;
    margin-left: 15rpx;
}

.list .total>.b .address {
    margin-bottom: 10rpx;
    color: #000;
    font-weight: bold;
}

.bot-loading {
    font-size: 24rpx;
    text-align: center;
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    color: #ccc;
}

.bot-toast {
    font-size: 24rpx;
    text-align: center;
    margin-top: 400rpx;
    margin-bottom: 30rpx;
    color: #ccc;
}