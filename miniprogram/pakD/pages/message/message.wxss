.top {
    padding-top: 10rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    opacity: 0.8;
    color: #ccc;
    background-color: white;
}

.list {
    width: 200rpx;
    padding: 10rpx auto;
    text-align: center;
}

.list image {
    width: 60rpx;
    height: 60rpx;
    margin-top: 17rpx;
}

.wz {
    font-size: 28rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    text-align: center;
}

.tab-active {
    opacity: 1 !important;
    color: #000 !important;
}

.box2 {
    margin: auto 10rpx;
    margin-top: 20rpx;
}


.xt {
    display: flex;
    justify-content: space-between;
    height: 200rpx;
    padding: 10rpx;
    border-left: 2rpx solid #000;
    border-radius: 8rpx;
    background-color: white;
    margin-bottom: 20rpx;
}

.xt .left {
    flex: 9;
}

.xt .left .type {
    height: 60rpx;
    line-height: 60rpx;
    color: #ccc;
}

.xt .left .title {
    height: 90rpx;
    line-height: 45rpx;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.xt .left .time {
    font-size: 24rpx;
    color: #ccc;
    margin-top: 10rpx;
}

.xt .right {
    flex: 1;
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
}

.xt .right image {
    width: 60rpx;
    height: 60rpx;
}

.collect {
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    padding: 10rpx;
    background-color: white;
}

.collect .top {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
}

.collect .top .l {
    flex: 9;
    display: flex;
}


.collect .top .l .name {
    color: #000;
    font-size: 28rpx;
    margin-left: 10rpx;
    margin-top: 20rpx;
    font-weight: bold;
}

.collect .top .l image {
    width: 70rpx;
    height: 70rpx;
    margin-top: 5rpx;
    margin-left: 10rpx;
    border-radius: 50%;
}

.jk{
    color: #000;
    margin-left: 10rpx;
    font-size: 28rpx;
    font-weight: bolder;
}

.collect .top .delete {
    flex: 1;
    width: 80rpx;
    text-align: right;
    margin-right: 10rpx;
}

.collect .top .delete image {
    width: 30rpx;
    height: 30rpx;
    margin-bottom: 10rpx;
}

.collect .middle {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.collect .middle .left {
    margin-left: 80rpx;
}

.scc {
    font-size: 28rpx;
}
.article-name {
    width: 500rpx;
    margin: 15rpx 0;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical;
    overflow:hidden;
    text-overflow:ellipsis;
    font-size: 28rpx;
    color: dimgrey;
    text-decoration: underline;
}
.collect .middle .right image {
    width: 45rpx;
    height: 45rpx;
}

.collect .bot {
    display: flex;
    justify-content: flex-end;
    font-size: 22rpx;
    color: rgb(160, 160, 160);
    margin-left: 80rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
}
.aaaa{
    font-size: 28rpx;
    color: dimgrey;
}
.lieb image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: inline-block;
    margin-right: 30rpx;
    vertical-align: top;
}

.nam {
    width: 560rpx;
    margin-top: 10rpx;
    display: inline-block;
}

.nam text {
    font-size: 30rpx;
    display: block;
}

.h2 {
    height: 80rpx;
    color: rgb(126, 126, 126);
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.hf {
    width: 160rpx;
    padding: 5rpx;
    text-align: center;
    border-radius: 15rpx;
    background-color: rgb(206, 206, 206);
}



.empty-message {
    margin: auto;
    margin-top: 300rpx;
}

.empty-message image {
    width: 250rpx;
    height: 250rpx;
}