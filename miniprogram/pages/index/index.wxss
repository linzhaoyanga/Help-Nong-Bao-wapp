.container{
    width: auto;
    margin: 20rpx;
    margin-bottom: 100rpx;
}

.container .nyzx {
    display: flex;
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
    line-height: 200rpx;
    border-radius: 10rpx;
    background-color: white;
}

.container .nyzx .left {
    flex: 4;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.container .nyzx .left image {
    width: 280rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

.container .nyzx .right {
    flex: 6;
    height: 160rpx;
    margin: 20rpx;
    margin-left: 0;
}

.container .nyzx .right .top {
    width: 100%;
    height: 100rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #000;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.container .nyzx .right .bot {
    display: flex;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
    color: #ccc;
    font-size: 20rpx;
}

.container .nyzx .right .bot .time {
    position: absolute;
    right: 10rpx;
}

.bot-toast{
    font-size: 24rpx;
    text-align: center;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    color: #ccc;
}

.bot-loading{
    font-size: 24rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    color: #ccc;
}