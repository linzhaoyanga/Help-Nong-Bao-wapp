.search {
    position: fixed;
    top: -5rpx;
    display: flex;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: white;
    z-index: 9999;
}

.inp {
    display: inline-block;
    font-size: 24rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.inpp {
    width: 100%;
    height: 80rpx;
    background-color: #f7f7f7;
    margin: 20rpx;
    border-radius: 8rpx;
}

.ss {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    margin: 20rpx 13rpx;

}

.tab {
    position: fixed;
    top: 90rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    white-space: nowrap;
    background-color: white;
    border-bottom: 1rpx solid rgb(241, 241, 241);
    z-index: 9999;
}
.a {
    display: inline-block;
    width: 120rpx;
    height: 90rpx;
    text-align: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
    font-size: 28rpx;
    color: #ccc;
}

.tab-active {
    color: #000;
    border-bottom: 4rpx solid #000;
}
.box{
    width: auto;
    margin: auto 10rpx;
    margin-top: 130rpx;
}
.box1{
    margin: auto 10rpx;
    margin-top: 200rpx;
}

.nyzx {
    display: flex;
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
    line-height: 200rpx;
    border-radius: 10rpx;
    background-color: white;
}

.nyzx .left {
    flex: 4;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.nyzx .left image {
    width: 280rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

.nyzx .right {
    width: 400rpx;
    height: 160rpx;
    margin: 20rpx;
    margin-left: 0;
}

.kkkk{
    width: 700rpx;
    height: 160rpx;
    margin: 20rpx;
}

.nyzx  .top {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.nyzx  .context{
    width: 100%;
    height: 80rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: rgb(128, 128, 128);
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.nyzx  .bot {
    display: flex;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    position: relative;
    color: #ccc;
    font-size: 20rpx;
}

.nyzx  .bot .time {
    position: absolute;
    right: 10rpx;
}

.bot-toast {
    font-size: 24rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    color: #ccc;
}

.empty-article {
    margin: auto;
    margin-top: 200rpx;
    font-size: 28rpx;
    color: #ccc;
}